<div class="row">
    <%= form_for @thread do |f| %>
        <div class="form-group">
            <%= f.label :title  %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :content  %>
            <%= f.text_area :content, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.submit "Create", class: 'btn btn-sm btn-default col-md-12' %>
        </div>
    <% end %>
</div>