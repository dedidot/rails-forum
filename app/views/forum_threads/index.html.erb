<div class="row mrbotton10">
    <div class="col-md-2">
        <select class="form-control" name="">
            <option value="">Last</option>
            <option value="">New</option>
        </select>
    </div>
    <div class="col-md-10">
    </div>
</div>

<% @threads.each do |t| %>
<div class="media mrbotton10">
  <div class="media-left">
    <a href="#">
        <%= image_tag "photo.jpg", { class: "photolist img-circle" } %>
    </a>
  </div> 
  <div class="media-body">
    <div class="col-md-12">
        <a href="/forum_threads/<%= t.id %>"><h4 class="media-heading"><%= t.title.titleize %></h4></a>
    </div>
    <div class="col-md-6">
        <div class="fn12 fncolorlabel">
            <span><%= I18n.l(t.created_at.to_date) %></span>
            by <span class="fnbold"><%= t.user.name %></span>
        </div>
    </div>
    <div class="col-md-6 right">
        <span class="mrright10"><i class="glyphicon glyphicon-comment"></i> <%= t.forum_posts.count %></span>
        <label class="label label-danger">Rails</label>
    </div>
    <div class="col-md-12 fn12 fncolorlabel">
        <%= t.content %>
    </div>
  </div>
</div>
<% end %>

</div>